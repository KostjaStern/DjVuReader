<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<!-- <?import javafx.scene.Group?> -->

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:id="root">

    <top>
        <VBox>
            <MenuBar fx:id="menuBar">
                <Menu text="File">
                    <MenuItem fx:id="openMenuItem" text="Open..." onAction="#onOpenFile"/>
                    <MenuItem fx:id="exitMenuItem" text="Exit" onAction="#onExit"/>
                </Menu>

                <Menu text="View">
                    <MenuItem fx:id="showStatistics" text="Show statistics" onAction="#onShowStatistics"/>
                </Menu>

                <Menu text="Help">
                    <MenuItem text="About" onAction="#onAbout"/>
                </Menu>
            </MenuBar>
            <ToolBar>
                <Button fx:id="zoomInButton" onAction="#onZoomInClicked">
                    <tooltip>
                        <Tooltip text="Zoom In"/>
                    </tooltip>
                    <graphic>
                        <ImageView fitWidth="32" fitHeight="32">
                            <Image url="/icons/zoom-in-32.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="zoomOutButton" onAction="#onZoomOutClicked">
                    <tooltip>
                        <Tooltip text="Zoom Out"/>
                    </tooltip>
                    <graphic>
                        <ImageView fitWidth="32" fitHeight="32">
                            <Image url="/icons/zoom-out-32.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <TextField fx:id="zoomValue" prefHeight="36" prefWidth="70" />
                <Label text="x: "/>
                <TextField fx:id="xCoordinate" prefHeight="36" prefWidth="70" />
                <Label text="y: "/>
                <TextField fx:id="yCoordinate" prefHeight="36" prefWidth="70" />
            </ToolBar>
        </VBox>
    </top>

    <!-- Main window: SplitPane -->
    <center>
        <SplitPane dividerPositions="0.25">
            <TreeView fx:id="chunkTree" prefWidth="200"/>

            <SplitPane fx:id="rightSplitPane" orientation="VERTICAL" dividerPositions="0.2">
                <TextArea fx:id="topTextArea" wrapText="true" />

                <ScrollPane fx:id="imageScrollPane" fitToWidth="true" fitToHeight="true" pannable="true">
                    <!-- <StackPane fx:id="imageStackPane">
                        <Group> -->
                    <VBox>
                            <ImageView fx:id="imageView" preserveRatio="true" />
                            <TreeView fx:id="textTree" />
                    </VBox>
                        <!-- </Group>
                    </StackPane> -->
                </ScrollPane>
            </SplitPane>
        </SplitPane>
    </center>

    <bottom>
        <!-- fx:id="statusBar" -->
        <HBox spacing="10" style="-fx-padding: 5; -fx-border-color: #ccc; -fx-border-width: 1 0 0 0;">
            <!-- <Label text="Status:"/>
            <Label fx:id="statusLabel"/> -->
            <ProgressBar fx:id="progressBar" prefWidth="150"/>
        </HBox>
    </bottom>
</BorderPane>
